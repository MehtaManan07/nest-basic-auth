model Category {
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    isDeleted Boolean  @default(false)
    id        Int      @id @default(autoincrement())
    name      String   @unique
}

model User {
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    isDeleted Boolean  @default(false)
    id        Int      @id @default(autoincrement())
    email     String   @unique
    password  String // Hashed password stored securely
    name      String
}
